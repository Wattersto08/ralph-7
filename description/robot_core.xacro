<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="green">
    <color rgba="0.06 0.256 0.1 1"/>
  </material>

  <material name="orange">
    <color rgba="1 0.3 0.1 1"/>
  </material>

  <material name="blue">
    <color rgba="0.2 0.2 1 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <link name="base_link">
  </link>

  <link name="base_footprint">
  </link>
  <joint name="base_footprint_joint" type="fixed">
      <parent link="base_link"/>
      <child link="base_footprint"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="chassis_joint" type="fixed">
      <parent link="base_link"/>
      <child link="chassis"/>
      <origin xyz="-0.267 0 0"/>
  </joint>

  <link name="chassis">
      <visual>
          <origin xyz="0.152 0 0.03" rpy="0 0 0"/>
          <geometry>
              <box size="0.322 0.304 0.06"/>
          </geometry>
          <material name="green"/>
      </visual>
      <collision>
        <origin xyz="0.152 0 0.03" rpy="0 0 0"/>
        <geometry>
            <box size="0.304 0.322 0.06"/>
        </geometry>
      </collision>
  </link>

<!-- LEFT WHEEL -->

  <joint name="left_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="left_wheel"/>
      <origin xyz="0 0.131 0.017" rpy="-${pi/2} 0 0"/>
      <axis xyz="0 0 1"/>
  </joint>

  <link name="left_wheel">
      <visual>
          <geometry>
              <cylinder length="0.03" radius="0.0325" />
          </geometry>
          <material name="black"/>
      </visual>
      <collision>
          <geometry>
              <cylinder length="0.03" radius="0.0325" />
          </geometry>
      </collision>
  </link>

<!-- RIGHT WHEEL -->

  <joint name="right_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="right_wheel"/>
      <origin xyz="0 -0.131 0.017" rpy="${pi/2} 0 0"/>
      <axis xyz="0 0 -1"/>
  </joint>

  <link name="right_wheel">
      <visual>
          <geometry>
              <cylinder length="0.03" radius="0.0325" />
          </geometry>
          <material name="black"/>
      </visual>
      <collision>
          <geometry>
              <cylinder length="0.03" radius="0.0325" />
          </geometry>
      </collision>
  </link>

<!-- CASTER WHEEL -->

  <joint name="caster_wheel_joint" type="fixed">
      <parent link="chassis"/>
      <child link="caster_wheel"/>
      <origin xyz="-0.013 0 -0.00475" rpy="0 0 0"/>
  </joint>

  <link name="caster_wheel">
      <visual>
          <geometry>
              <sphere radius="0.0125" />
          </geometry>
          <material name="white"/>
      </visual>
      <collision>
          <geometry>
              <sphere radius="0.0125" />
          </geometry>
          <material name="white"/>
      </collision>
  </link>

</robot>
